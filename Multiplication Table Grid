#The print out for the Collatz Conjecture challenege 
#The loop for outputting the sequence and the amount of steps taken as well as the starting number 
step = 0
print(f"=== Challenge 1: Collatz Conjecture ===")
current_number = int(input("Enter starting number: Sequence: "))
print(current_number, end=" ")
while (current_number != 1):
    if current_number % 2 == 0:
        current_number = current_number / 2
    else:
        current_number = (current_number * 3) + 1
    
    if current_number == 1:
        print(f"{current_number:.0f}")
        step += 1
        break
    print(f"{current_number:.0f}", end=" ")
    step += 1
print("Steps:", step)

#Loop for the prime number checker
#As well as the code for the output
exit = 0
print(f"\n=== Challenge 2: Prime Number Checker ===")
is_it_prime = int(input("Enter a number: Testing divisors from"))
while is_it_prime > 1:
    print(f" {is_it_prime - (is_it_prime - 2)} to {is_it_prime - 1}...")
    for i in range(2, is_it_prime):
        if (is_it_prime % i) == 0:
            print(f"{is_it_prime:.0f} is not prime (divisible by {i})")
            exit = 1
            break
        else:
            continue
    if exit == 1:
        break

    print(f"{is_it_prime} is prime!")
    break

#The output out for the Multiplication Table Grid 
#As well as the loop for the multiplication 
print(f"\n=== Challenge 3: Multiplication Table ===")
print(f"Multiplication Table:\n      ", end="")
#The loop for the first row for the multiplication table 
for num in range(1,11):
    if num == 9:
        print(f"{num}", end="  ")
        continue
    elif num == 10:
        print(f"{num}")
        break
    print(f"{num}", end= "   ")

# The loop for the second through eleventh row for the multiplication table
for row in range(1,11):
    print(f" {row} ", end= "   ")
    for row_number in range(1,11):
        if row_number == 9:
            print(f"{row * row_number}", end="  ")
            continue
        elif row_number == 10:
            print(row * row_number)
            break
        print(f"{row * row_number}", end="   ")
